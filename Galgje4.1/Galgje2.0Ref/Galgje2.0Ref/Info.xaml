<Window x:Class="Galgje2._0.Info"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Galgje2._0"
        mc:Ignorable="d"
        Title="Spelregels" Height="300" Width="350" ResizeMode="NoResize">
    <Grid>

        <StackPanel  >
            <Label FontSize="20px" FontWeight="Bold" HorizontalAlignment="Center">De Spelregels van Galgje</Label>
            <Label Background="Black" Height="0.5"></Label>
            <Label FontWeight="Bold" Margin="5">1. Het spel start na het ingeven van een geheim woord</Label>
            <Label FontWeight="Bold" Margin="5">2. Het spel is verloren als je ophangt</Label>
            <Label FontWeight="Bold" Margin="5">3. Het spel is gewonnen als je het volledige woord typt</Label>
            <Label FontWeight="Bold" Margin="5">4. Bij klikken op nieuw spel word het vorige spel gewist</Label>
            <Button FontWeight="Bold" Height="45px" Margin="10" Click="Button_Click" >Sluit info</Button>
        </StackPanel>

    </Grid>
</Window>
